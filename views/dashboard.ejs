<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>
<body>
    <%- include('partials/layout', { title: 'Dashboard', user, body: `
        <div class="flex flex-col items-center">
            <h1 class="text-3xl font-bold mb-4 text-center">Welcome, ${user.username}!</h1>
            <p class="mb-6 text-center">Manage servers:</p>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                ${ownedGuilds.map(guild => `
                    <div class="bg-gray-800 shadow-lg rounded-lg p-4 transition-transform transform hover:scale-105">
                        <h2 class="text-xl font-bold mb-2">${guild.name}</h2>
                        <p class="text-sm text-gray-400 mb-4">Server ID: ${guild.id}</p>
                        <a href="/server/${guild.id}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors">
                            Manage
                        </a>
                    </div>
                `).join('')}
            </div>
        </div>
    ` }) %>
</body>
</html>